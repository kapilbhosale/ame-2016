<div class="container">
  <h2>Available Students</h2>

  <%= form_tag("search_students", method: :post) do %>
    search by name :
    <input type="text", name="search_string" > &nbsp;
    <button type="submit" class="btn btn-primary">Submit</button>
  <% end %>

  <table class="table table-hover table-bordered table-striped">
    <thead>
    <tr>
      <th>First name</th>
      <th>Fater's name</th>
      <th>Last name</th>
      <th>State Rank</th>
      <th>Composite Score</th>
      <th>Contact no</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>

    <% @students.each do |student| %>
      <% next if student.profile.nil? %>
      <tr>
        <td> <%= student.profile.first_name %></td>
        <td> <%= student.profile.father_name %></td>
        <td> <%= student.profile.surname %></td>
        <td> <%= student.profile.rank %></td>
        <td> <%= student.profile.composite_score %></td>
        <td> <%= student.profile.contact_no %></td>
        <td> <%= student.email %></td>
        <td> <%= link_to "Analyze", new_admin_analysis_path  %> </td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>